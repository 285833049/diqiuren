<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_background"
    android:orientation="vertical" 
    android:fitsSystemWindows="true">

    <include layout="@layout/title_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black3"
        android:textSize="13sp"
        android:layout_margin="@dimen/main_margin_left_right"
        android:text="@string/change_phone_edit_new_phone" />

    <RelativeLayout
        android:id="@+id/change_phone_choise_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_margin_left_right"
        android:background="@color/wite" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/change_phone_address"
            android:textColor="@color/black3"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/phone_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/iv_1"
            android:text="中国大陆86"
            android:textColor="@color/black3"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/main_margin_left_right"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <include layout="@layout/line_one_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:padding="@dimen/main_margin_left_right"
        android:background="@color/wite" >

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/change_phone_new"
            android:textColor="@color/black3" />

        <EditText
            android:id="@+id/change_phone_new_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_1"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black3"
            android:hint="请输入新手机号"
            android:inputType="phone"
            android:textSize="13sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/change_phoen_next2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/light_btn_selector"
        android:gravity="center"
        android:padding="@dimen/login_button_padding"
        android:text="@string/regist"
        android:textColor="@color/wite"
        android:textSize="@dimen/regist_size" />

</LinearLayout>