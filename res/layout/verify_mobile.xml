<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_tab_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="true" >
    <include layout="@layout/title_layout"/>
    
    <TextView 
        android:id="@+id/phone"
        style="@style/CommonViewTheme"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        />
    
   <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/wite"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/et_smscode" 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:paddingLeft="20dp"
            android:textSize="14sp"
            android:hint="@string/smscode"/>
        <View android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@color/tab_text_hover"
            android:layout_marginBottom="10dp"/>
        <Button             
            android:id="@+id/getcode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:textColor="@color/tab_text_hover"
            android:text="@string/get_code"/>
        
    </LinearLayout>
    
    <Button style="@style/CommonButton"
            android:layout_marginTop="20dp"
            android:text="@string/regist"
            android:id="@+id/btn_next"
            />

</LinearLayout>
