<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/main_margin_left_right"
    android:layout_marginTop="@dimen/main_margin_left_right"
    android:background="@drawable/module_bg_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <com.earthman.app.widget.RoundCornerImageView
        android:id="@+id/img_user_icon"
        android:layout_width="@dimen/friend_icon_h_w"
        android:layout_height="@dimen/friend_icon_h_w"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/main_margin_left_right" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_user_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/friend_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/friend_name"
            android:textSize="@dimen/friend_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/friend_tip_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/friend_tips_1"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:textColor="@color/wite"
                android:textSize="@dimen/friend_tips_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/friend_tip_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/friend_tips_2"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:textColor="@color/wite"
                android:textSize="@dimen/friend_tips_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/friend_tip_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/friend_tips_3"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:textColor="@color/wite"
                android:textSize="@dimen/friend_tips_text_size"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/light_btn_selector"
        android:focusable="false"
        android:padding="5dp"
        android:text="发消息"
        android:textColor="@color/wite"
        android:textSize="12sp" />

</RelativeLayout>