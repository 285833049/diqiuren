<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_tab_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tab_text_hover" >

        <Button
            android:id="@+id/btn_back"
            style="@style/CommonViewTheme"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/light_btn_selector"
            android:gravity="center"
            android:text="@string/cancel"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/wite" />
        
        <Button
            android:id="@+id/btn_right"
            style="@style/CommonViewTheme"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/light_btn_selector"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="@string/publish"
            android:textColor="@color/wite"
            android:textSize="14sp" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"       
        android:padding="10dp"
        android:background="@color/white">
        <EditText  
            android:id="@+id/et_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:hint="@string/transfer_reason"
            android:background="@null"
            android:ellipsize="end"
            android:textSize="14sp"/>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/et_reason"
            android:layout_marginTop="15dp"           
            android:background="@color/line_background_touming">
            <ImageView 
                android:id="@+id/iv_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/pictures_no"
                android:visibility="gone"/>
            <TextView 
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>