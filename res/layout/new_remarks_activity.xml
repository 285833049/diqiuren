<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/main_margin_left_right"
        android:background="@drawable/edit_text_shape"
        android:gravity="top"
        android:hint="@string/death_et_hint"
        android:padding="@dimen/main_margin_left_right"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_input_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin_left_right"
        android:layout_marginRight="@dimen/main_margin_left_right"
        android:text="总字数300个字,剩余300字"
        android:textColor="@color/black_3"
        android:textSize="11sp" />

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/light_btn_selector"
        android:gravity="center"
        android:padding="@dimen/login_button_padding"
        android:text="@string/commit"
        android:textColor="@color/wite"
        android:textSize="@dimen/regist_size" />

</LinearLayout>