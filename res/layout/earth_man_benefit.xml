<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/earth_man_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_margin"
        android:layout_marginLeft="@dimen/main_margin_left_right"
        android:layout_marginRight="@dimen/main_margin_left_right"
        android:layout_marginTop="@dimen/title_margin"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp" >

            <LinearLayout
                android:id="@+id/video_get_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/main_margin_left_right"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/chat"
                    android:drawablePadding="5dp"
                    android:text="@string/earth_man_benefit"
                    android:textColor="@color/black1"
                    android:textSize="14sp" />
              
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/main_margin_left_right"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/right_arrow"
                android:text="@string/get_more"
                android:textColor="@color/video_get_more_color"
                android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/line_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gy_margin_5"
            android:layout_marginRight="@dimen/gy_margin_5"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/wite" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gy_margin_r"
                        android:text="@string/find_someone"
                        android:textColor="@color/gray_606060"
                        android:textSize="@dimen/gy_text_title_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gy_margin_r"
                        android:layout_marginTop="@dimen/video_margin"
                        android:text="@string/find_someone_detial"
                        android:textColor="@color/video_get_more_color"
                        android:textSize="@dimen/gy_text_detial_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/gy_margin_r"
                    android:src="@drawable/find_someone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/video_margin"
                android:layout_weight="1"
                android:background="@color/wite" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gy_margin_r"
                        android:text="@string/social_benefit"
                        android:textColor="@color/gray_606060"
                        android:textSize="@dimen/gy_text_title_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gy_margin_r"
                        android:layout_marginTop="@dimen/video_margin"
                        android:text="@string/social_benefit_detial"
                        android:textColor="@color/video_get_more_color"
                        android:textSize="@dimen/gy_text_detial_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/gy_margin_r"
                    android:src="@drawable/social_benefit" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gy_margin_5"
            android:layout_marginRight="@dimen/gy_margin_5"
            android:layout_marginTop="@dimen/gy_margin_r"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/wite" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gy_margin_r"
                        android:text="@string/hope_project"
                        android:textColor="@color/gray_606060"
                        android:textSize="@dimen/gy_text_title_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gy_margin_r"
                        android:layout_marginTop="@dimen/video_margin"
                        android:lines="1"
                        android:text="@string/hope_project_detial"
                        android:textColor="@color/video_get_more_color"
                        android:textSize="@dimen/gy_text_detial_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/gy_margin_r"
                    android:src="@drawable/hope_project" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/video_margin"
                android:layout_weight="1"
                android:background="@color/wite" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gy_margin_r"
                        android:text="@string/hort_heart"
                        android:textColor="@color/gray_606060"
                        android:textSize="@dimen/gy_text_title_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gy_margin_r"
                        android:layout_marginTop="@dimen/video_margin"
                        android:lines="1"
                        android:text="@string/hort_heart_detial"
                        android:textColor="@color/video_get_more_color"
                        android:textSize="@dimen/gy_text_detial_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/gy_margin_r"
                    android:src="@drawable/hort_heart" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>