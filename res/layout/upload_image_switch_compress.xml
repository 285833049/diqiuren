<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wite"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/black_e" />

    <RelativeLayout
        android:id="@+id/rl_normal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp" >

        <ImageButton
            android:id="@+id/ib_normal"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/upload_image_compress_shape"
            android:clickable="false"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/tv_normal"
            android:textColor="@color/black4"
            android:textSize="14sp" />
        

        <TextView
            android:id="@+id/tv_normal_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_normal"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/ib_normal"
            android:text="@string/tv_normal_details"
            android:textColor="@color/number6"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_e" />

    <RelativeLayout
        android:id="@+id/rl_hd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp" >

        <ImageButton
            android:id="@+id/ib_hd"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/upload_image_compress_shape"
            android:clickable="false"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/tv_hd"
            android:gravity="center"
            android:textColor="@color/black4"
            android:textSize="14sp" />
        
    
        <TextView
            android:id="@+id/tv_hd_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_hd"
            android:layout_marginTop="4dp"
            android:text="@string/tv_hd_details"
            android:textColor="@color/number6"
            android:textSize="12sp" />
        
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_hd"
            android:layout_above="@id/tv_hd_details"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="4dp"
            android:text="@string/tv_hd_tag"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="10sp" 
            android:background="@drawable/upload_image_hd_shape"/>
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_e" />

    <RelativeLayout
        android:id="@+id/rl_original"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp" >

        <ImageButton
            android:id="@+id/ib_original"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/upload_image_compress_shape"
            android:clickable="false"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/tv_original"
            android:textColor="@color/black4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_original_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_original"
            android:layout_marginTop="4dp"
            android:text="@string/tv_original_details"
            android:textColor="@color/number6"
            android:textSize="12sp" />
        
           <TextView
               android:id="@+id/tv_image_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_original"
            android:layout_above="@id/tv_original_details"
            android:layout_marginLeft="4dp"
            android:textColor="@color/number6"
            android:gravity="center"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_e" />

</LinearLayout>