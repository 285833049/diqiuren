<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/module_bg_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mice_personal_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.earthman.app.widget.CircleImageView
            android:id="@+id/mine_img_user_icon"
            android:layout_width="@dimen/friend_icon_h_w"
            android:layout_height="@dimen/friend_icon_h_w"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/main_margin_left_right" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/mine_img_user_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/friend_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/main_margin_left_right"
                android:textColor="@color/mine_textcolor"
                android:textSize="@dimen/friend_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/friend_item_cardid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_margin_left_right"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/mine_textcolor"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>