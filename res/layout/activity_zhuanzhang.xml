<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:fitsSystemWindows="true">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wite"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/zhuanzhang_to_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_margin_left_right"
            android:drawableLeft="@drawable/icon"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="@string/zhuanzhang_to_my_friend" />

        <include layout="@layout/line_one_gray" />

        <TextView
            android:id="@+id/zhuanzhang_to_earthcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_margin_left_right"
            android:drawableLeft="@drawable/logo"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="@string/zhuanzhang_toearthmanaccount" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/line_background"
        android:padding="@dimen/main_margin_left_right"
        android:text="@string/zhuanzhang_recently" />

    <ListView
        android:id="@+id/recently_zhuanzhang_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>

</LinearLayout>