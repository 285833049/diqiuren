<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true" >

    <include layout="@layout/title_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/line_background"
        android:paddingBottom="@dimen/main_margin_left_right"
        android:paddingLeft="15dp"
        android:paddingRight="@dimen/main_margin_left_right"
        android:paddingTop="@dimen/main_margin_left_right"
        android:text="@string/share_mine1"
        android:textColor="@color/black5"
        android:textSize="13sp" />

    <ListView
        android:id="@+id/share_mine_to_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wite"
        android:listSelector="@null" >
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/line_background"
        android:paddingBottom="@dimen/main_margin_left_right"
        android:paddingLeft="15dp"
        android:paddingRight="@dimen/main_margin_left_right"
        android:paddingTop="@dimen/main_margin_left_right"
        android:text="@string/share_mine2"
        android:textColor="@color/black5"
        android:textSize="13sp" />

    <ListView
        android:id="@+id/share_mine_to_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wite"
        android:listSelector="@null" >
    </ListView>

</LinearLayout>