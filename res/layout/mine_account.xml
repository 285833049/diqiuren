<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wite"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mice_personal_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.earthman.app.widget.RoundCornerImageView
            android:id="@+id/mine_img_user_icon"
            android:layout_width="@dimen/friend_icon_h_w"
            android:layout_height="@dimen/friend_icon_h_w"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/main_margin_left_right"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/mine_img_user_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/friend_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mine_textcolor"
                android:textSize="@dimen/friend_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

            <TextView
                	android:id="@+id/mine_cardid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:textSize="12sp"
                    android:paddingLeft="2dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/mine_textcolor"/>

            <TextView
                android:id="@+id/mine_youxiaoqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:textColor="@color/mine_textcolor"
                android:textSize="12sp"
                 />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/mine_right_1"
            android:text="@string/mine_my_setting"
            android:textColor="#B6B2B2"
            android:visibility="gone"
            android:textSize="@dimen/mine_text_size_small" />

        <ImageView
            android:id="@+id/mine_right_1"
            style="@style/regiet_item_img_right_style"
            android:layout_gravity="center"
            android:src="@drawable/right" />
    </RelativeLayout>

    <include layout="@layout/line_one_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/my_friend_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/module_bg_selector"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_firend_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/mine_textcolor"
                android:textSize="@dimen/mine_text_size_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/mine_myfriend"
                android:textColor="@color/mine_textcolor"
                android:textSize="@dimen/mine_text_size_small" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_background" />

        <LinearLayout
            android:id="@+id/who_i_see"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/module_bg_selector"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/who_i_see_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/mine_textcolor"
                android:textSize="@dimen/mine_text_size_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/mine_i_see"
                android:textColor="@color/mine_textcolor"
                android:textSize="@dimen/mine_text_size_small" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_background" />

        <LinearLayout
            android:id="@+id/who_see_me_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
 			android:background="@drawable/module_bg_selector">

            <TextView
                android:id="@+id/who_see_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/mine_textcolor"
                android:textSize="@dimen/mine_text_size_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/mine_see_me"
                android:textColor="@color/mine_textcolor"
                android:textSize="@dimen/mine_text_size_small" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/line_one_gray" />

</LinearLayout>
