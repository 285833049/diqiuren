<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/main_margin_left_right"
    android:layout_marginRight="@dimen/main_margin_left_right"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/earth_man_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_margin"
        android:layout_marginTop="@dimen/title_margin"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp" >

            <LinearLayout
                android:id="@+id/video_get_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/main_margin_left_right"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/earth_man_wenxue"
                    android:drawablePadding="5dp"
                    android:text="@string/earth_man_wenxue"
                    android:textColor="@color/black1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/right_arrow"
                    android:text="@string/get_more"
                    android:textColor="@color/video_get_more_color"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qk_h"
        android:layout_marginBottom="@dimen/video_margin_button"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/tv_wx_fh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@color/title_background"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/qk_img_h_w"
                android:layout_height="@dimen/qk_img_h_w"
                android:src="@drawable/heart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qk_margin_b_top"
                android:text="@string/earth_man_love"
                android:textColor="@color/wite"
                android:textSize="@dimen/qk_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_wx_gc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/qk_margin_r"
            android:layout_weight="1"
            android:background="@color/title_background"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/qk_img_h_w"
                android:layout_height="@dimen/qk_img_h_w"
                android:src="@drawable/poetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qk_margin_b_top"
                android:text="@string/earth_man_poetry"
                android:textColor="@color/wite"
                android:textSize="@dimen/qk_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_wx_qk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/qk_margin_r"
            android:layout_weight="1"
            android:background="@color/title_background"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/qk_img_h_w"
                android:layout_height="@dimen/qk_img_h_w"
                android:src="@drawable/periodical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qk_margin_b_top"
                android:text="@string/earth_man_periodical"
                android:textColor="@color/wite"
                android:textSize="@dimen/qk_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_wx_gs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/title_background"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/qk_img_h_w"
                android:layout_height="@dimen/qk_img_h_w"
                android:src="@drawable/story" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qk_margin_b_top"
                android:text="@string/earth_man_story"
                android:textColor="@color/wite"
                android:textSize="@dimen/qk_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>