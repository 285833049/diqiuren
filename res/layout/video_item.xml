<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_upload_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ececec" >

        <TextView
            android:id="@+id/tv_upload_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/shangchuanship"
            android:text="@string/upload_video"
            android:textColor="@color/black2"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/about_img" />

        <TextView
            android:id="@+id/tv_quanxuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_video"
            android:alpha="0.6"
            android:background="@android:color/black"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="12sp"
             android:ellipsize="middle"
             android:singleLine="true"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bofang" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_video_name"
        style="@style/CommonViewTheme"
        android:layout_below="@+id/rl_video"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textColor="@color/black2"
        android:textSize="14sp" />

</RelativeLayout>