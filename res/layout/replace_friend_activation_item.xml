<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/qk_img_h_w"
    android:layout_marginTop="@dimen/qk_img_h_w"
    android:background="@drawable/module_bg_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_user_icon"
        android:layout_width="@dimen/friend_icon_h_w"
        android:layout_height="@dimen/friend_icon_h_w"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/main_margin_left_right"
        android:src="@drawable/avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/img_user_icon"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/friend_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/earth_man_code"
                android:textColor="@color/friend_name"
                android:textSize="@dimen/friend_text_size" />

            <TextView
                android:id="@+id/friend_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/friend_name"
                android:textSize="@dimen/friend_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/friend_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/friend_name"
                android:textSize="@dimen/friend_text_size" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/personal_pay_to_see_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/main_margin_left_right"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:src="@drawable/right" />

</RelativeLayout>