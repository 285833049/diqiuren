<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape>
            <!-- 填充颜色 -->
            <solid android:color="@color/wite"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="@color/line_background"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_pressed="true">
		<shape>
		    <!-- 填充颜色 -->
            <solid android:color="@color/module_pressed_color"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="@color/module_pressed_color"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="5dp" />
        </shape></item>

</selector>